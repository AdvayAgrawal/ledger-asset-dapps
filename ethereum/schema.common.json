{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "properties": {
        "blockchain_name": {
            "type": "string"
        },
        "contracts": {
            "items": {
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "contractName": {
                        "type": "string"
                    },
                    "selectors": {
                        "additionalProperties": false,
                        "patternProperties": {
                            "^0x[a-z0-9]*$": {
                                "properties": {
                                    "arguments": {
                                        "additionalProperties": false,
                                        "patternProperties": {
                                            "^[a-zA-Z0-9]*$": {
                                                "properties": {
                                                    "defaultLabel": {
                                                        "type": "string"
                                                    },
                                                    "typePath": {
                                                        "type": "string"
                                                    },
                                                    "valueFormat": {
                                                        "type": "string"
                                                    },
                                                    "valuePath": {
                                                        "properties": {
                                                            "erc20": {
                                                                "type": "string"
                                                            },
                                                            "ethereum": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "required": [
                                                    "defaultLabel",
                                                    "valueFormat",
                                                    "valuePath"
                                                ],
                                                "type": "object"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "conditions": {
                                        "properties": {
                                            "enforeceEthAmountZero": {
                                                "type": "boolean"
                                            },
                                            "ethContractAddress": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "ethAmountZero"
                                        ],
                                        "type": "object"
                                    },
                                    "defaultLabel": {
                                        "type": "string"
                                    },
                                    "method": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "method",
                                    "defaultLabel",
                                    "conditions",
                                    "arguments"
                                ],
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                },
                "required": [
                    "contractName",
                    "address",
                    "selectors"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "contracts"
    ],
    "type": "object"
}